{
  "name": "HomeAssistant",
  "description": "HomeAssistant for smart glasses.",
  "version": "1.1.0",
  "settings": [
    {
      "type": "group",
      "title": "HomeAssistant Settings"
    },
    {
      "key": "hassioUrl",
      "type": "text",
      "label": "URL",
      "defaultValue": "https://youraddress:8123"
    },
    {
      "key": "hassioToken",
      "type": "text",
      "label": "Token",
      "defaultValue": ""
    },
    {
      "type": "group",
      "title": "HomeAssistantAOS Settings"
    },
    {
      "key": "exitWord",
      "type": "text",
      "label": "Word for exit from app",
      "defaultValue": "quit"
    },
    {
      "type": "group",
      "title": "Language settings"
    },
